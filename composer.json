{
    "name": "ixocreate/config",
    "description": "Config Class for IXOCREATE",
    "license": "MIT",
    "type": "library",
    "authors": [{
        "name": "IXOCREATE"
    }],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0.6",
        "ixocreate/contract": "dev-develop",
        "friendsofphp/php-cs-fixer": "^2.5",
        "php-coveralls/php-coveralls": "^2.0",
        "zendframework/zend-stdlib": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Config\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IxocreateMisc\\Config\\": "tests/misc/",
            "IxocreateTest\\Config\\": "tests/src/"
        }
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
